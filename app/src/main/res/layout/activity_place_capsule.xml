<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:text="타임캡슐 보관"
        android:textAppearance="@style/ContentTitleStyle"
        android:includeFontPadding="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="start"
        android:paddingStart="8dp"
        android:text="추억이 있는 장소에 타임캡슐을 보관해주세요."
        android:textAppearance="@style/ContentDescriptionStyle" />

    <TextureView
        android:id="@+id/place_capsule_camera"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/place_capsule_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="타임캡슐을 여기에 보관할래요!"
        android:textSize="13sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/notosans_bold"
        android:includeFontPadding="false"
        android:background="@drawable/rounded_background"
        android:paddingVertical="12dp"
        android:paddingHorizontal="24dp"
        android:elevation="6dp"
        android:layout_marginBottom="4dp" />
</LinearLayout>