<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/orbs"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그 해 우리는"
        android:textSize="48sp"
        android:textStyle="bold"
        android:fontFamily="@font/cafe24"
        android:textColor="@color/primary_pink"
        android:gravity="center"
        android:includeFontPadding="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Our Beloved KAIST"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/cafe24"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:includeFontPadding="false" />

    <Button
        android:id="@+id/create_capsule_activity_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="타임캡슐 생성하기"
        android:textSize="13sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/notosans_bold"
        android:includeFontPadding="false"
        android:background="@drawable/rounded_background"
        android:paddingVertical="12dp"
        android:paddingHorizontal="24dp"
        android:elevation="6dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/join_capsule_activity_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="타임캡슐 참여하기"
        android:textSize="13sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/notosans_bold"
        android:includeFontPadding="false"
        android:background="@drawable/rounded_background"
        android:paddingVertical="12dp"
        android:paddingHorizontal="24dp"
        android:elevation="6dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/open_capsule_activity_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="타임캡슐 열러가기"
        android:textSize="13sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/notosans_bold"
        android:includeFontPadding="false"
        android:background="@drawable/rounded_background"
        android:paddingVertical="12dp"
        android:paddingHorizontal="24dp"
        android:elevation="6dp"
        android:layout_marginBottom="12dp" />

</LinearLayout>