<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:text="타임캡슐 열기"
        android:textAppearance="@style/ContentTitleStyle"
        android:includeFontPadding="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="start"
        android:paddingStart="8dp"
        android:text="보관된 타임캡슐을 열어 추억을 확인해보세요."
        android:textAppearance="@style/ContentDescriptionStyle" />

    <TextureView
        android:id="@+id/open_capsule_camera"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/open_capsule_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="타임캡슐을 열래요!"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:backgroundTint="@android:color/white"
        android:padding="12dp"
        android:elevation="4dp"
        android:layout_marginTop="16dp" />
</LinearLayout>