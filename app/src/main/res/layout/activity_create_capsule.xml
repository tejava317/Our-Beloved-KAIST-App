<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/photo"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:text="타임캡슐 생성"
        android:textAppearance="@style/ContentTitleStyle"
        android:includeFontPadding="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="start"
        android:paddingStart="8dp"
        android:text="보관하고 싶은 소중한 추억이 있나요?"
        android:textAppearance="@style/ContentDescriptionStyle" />

    <EditText
        android:id="@+id/et_capsule_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:hint="타임캡슐 이름"
        android:padding="12dp" />

    <EditText
        android:id="@+id/et_creator_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:hint="생성한 사람의 이름"
        android:padding="12dp" />

    <Button
        android:id="@+id/create_capsule_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_pink"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="만들기"
        android:textColor="@android:color/black"
        android:textStyle="bold" />
</LinearLayout>
